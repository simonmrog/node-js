<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/home.css" />
  <title>Portfolio</title>
</head>
<body>
  <div class="site-wrapper">
    {{>header}}
    <div class="content">
      <section class="hero">
        <h1>{{greeting}}</h1>
        <p> {{introduction}}</p>
      </section>
      <section class="skills">
      </section>
      <h1>My Projects</h1>
      <section class="projects">
        {{#projects}}
            <section class="project">
              <a href="/projects/{{slug}}">
                <img src="{{{img}}}" width="300px" height="300px" />
              </a>
              <h3>{{name}}</h3>
              <p>{{description}}</p>
              <p>{{client}}</p>
            </section>
        {{/projects}}
      </section>
      <hr />
      <h1>Contact Me</h1>
      <section class="contact-form">
        <form method="post" action="">
          <input id="name-input" class="form-item" type="text" name="name" placeholder="Name" />
          <input id="email-input" class="form-item" type="email" name="email" placeholder="email" />
          <input id="message-input" class="form-item" type="text" name="message" placeholder="message" />
          <button id="submit-button" class="form-item" type="submit">Submit</button>
        </form>
      </section>
  </div>
  {{>footer}}
  <script src="js/main.js"></script>
</body>
</html>